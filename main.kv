# importando a biblioteca utils para passar a cor hexadecimal
#:import utils kivy.utils

FloatLayout:
    # tudo que está dentro do FloatLayout tem que ter pos_hint, 'right, top' e size_hint, 'largura, altura'

    # vamos desenhar nosso "cabeçalho"
    canvas:
        # canvas é onde vamos desenhar os elementos, por padrão o fundo é preto
        # editando a cor de fundo
        Color:
            # rgb: (r, g, b, transparência)
            # rgb: (0.266666667, 0.447058854, 0.768627451, 1)
            rgb: utils.get_color_from_hex("#001824")
        Rectangle:
            size: self.size
            # mesmo tamanho do FloatLayout
            pos: self.pos
            # mesma posição do FloatLayout

    # carregar a logo da hashtag no 30% superior da página
    Image:
        pos_hint: {"right":1, "top": 0.9}
        size_hint: 1, 0.2
        # logo da hashtag
        source: "icones/hash.png"
        id: foto_perfil

    ScreenManager:  # transforma o main.kv em um gerenciador de telas
        pos_hint: {"right": 1, "top": 0.7}
        size_hint: 1, 0.7

        # esse id é necessário para que o código python consiga puxar informações do arquivo .kv
        id: screen_manager
        LoginPage:
            name: "loginpage"
            id: loginpage
        HomePage: # classe do telas.py
            name: "homepage"
            id: homepage

        # quarto passo da criação de página, adicionar a classe aqui dentro do ScreenManager
        AjustesPage:
            name: "ajustespage"
            id: ajustespage
        AdicionarVendasPage:
            name: "adicionarvendaspage"
            id: adicionarvendaspage
        AdicionarVendedorPage:
            name: "adicionarvendedorpage"
            id: adicionarvendedorpage
        FotoPerfilPage:
            name: "fotoperfilpage"
            id: fotoperfilpage
        ListarVendedoresPage:
            name: "listarvendedorespage"
            id: listarvendedorespage
        TodasVendasPage:
            name: "todasvendaspage"
            id: todasvendaspage
        VendasOutroVendedorPage:
            name: "vendasoutrovendedorpage"
            id: vendasoutrovendedorpage

