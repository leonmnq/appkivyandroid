# segundo passo para criar uma página, criar o arquivo . kv

<LoginPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        # Label do título
        Label:
            text: "CONTROLE DE [color=#00CFDB]VENDAS HASHTAG[/color]"
            bold: True
            # markup: True para deixar um pedaço do texto de uma cor e outro pedaço de outra
            # link = https://kivy.org/doc/stable/api-kivy.core.text.markup.html
            markup: True
            pos_hint: {"right": 0.9, "top": 0.9}
            size_hint: 0.8, 0.2

        # TextInput E-mail
        TextInput:
            id: email_input
            # hint_text = texto padrão dentro da caixa de texto
            hint_text: "E-mail"
            pos_hint: {"right": 0.9, "top": 0.7}
            size_hint: 0.8, 0.1

        # TextInput Senha
        TextInput:
            id: senha_input
            # password: True esconde a senha
            password: True
            hint_text: "Senha"
            pos_hint: {"right": 0.9, "top": 0.55}
            size_hint: 0.8, 0.1

        # Label de texto faça seu login/msg erro
        Label:
            id: mensagem_login
            text: "[color=#00CFDB]Faça seu login[/color]"
            bold: True
            markup: True
            pos_hint: {"right": 0.9, "top": 0.4}
            size_hint: 0.8, 0.1

        # LabelButton = Fazer Login
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.firebase.fazer_login(email_input.text, senha_input.text)
            text: "Faça seu Login"
            pos_hint: {"right": 0.45, "top": 0.3}
            size_hint: 0.4, 0.2

        # LabelButton = Criar Conta
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"

            # firebase é a instância que criamos da classe MyFirebase no arquivo main.py
            on_release: app.firebase.criar_conta(email_input.text, senha_input.text)
            text: "Criar Conta"
            pos_hint: {"right": 0.95, "top": 0.3}
            size_hint: 0.4, 0.2