# segundo passo para criar uma página, criar o arquivo . kv

<ListarVendedoresPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        # coloquei esse label para o usuário ter uma noção de que página está
        Label:
            pos_hint: {"right": 0.85, "top": 1}
            size_hint: 0.7, 0.1
            bold: True
            text: "Equipe de Vendedores"

        # lista de vendedores
        # será um scroll vertical
        ScrollView:
            pos_hint: {"right": 1, "top": 0.9}
            size_hint: 1, 0.78
            GridLayout:
                cols: 1
                id: lista_vendedores
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True

        # botao voltar
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("homepage")